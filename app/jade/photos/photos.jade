	section.photos__upload
		h2.photos__upload-header Затмите их всех! #[br] Выкладывайте все, что накопилось в телефоне!
		.photos__upload-container
			form.photos__upload-form
				img.photos__upload-img(src="img/photos/winter.jpg" alt="Загружаемое изображение")
				ul.photos__upload-features
					li.photos__upload-control
						label.photos__upload-label.label-crop.photos__upload-label_active(for="crop")
						input.photos__upload-input#crop(type="range")
					li.photos__upload-control
						label.photos__upload-label.label-fill(for="fill")
						input.photos__upload-input#fill(type="range")
					li.photos__upload-control
						label.photos__upload-label.label-contrast(for="contrast")
						input.photos__upload-input#contrast(type="range")
				.photos__upload-btn-group
					button.photos__btn.photos__upload-submit Запостить
					button(type="button").photos__btn.photos__btn_disable.photos__upload-cancel Отмена

